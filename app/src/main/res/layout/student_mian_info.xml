<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
     <!--页面的title-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="50dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="#000"
            android:text="信 息 完 善"
            >
        </TextView>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginBottom="5dip"
            android:layout_marginTop="5dip"
            android:layout_marginLeft="1dip"
            android:layout_marginRight="1dip"
            android:background="@color/view_line"
            />
    </LinearLayout>
    <!--设置下拉框-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="选择学院"
                android:layout_gravity="center_vertical"
                android:textColor="#E90E0E"
                android:padding="5dip"
                android:textSize="16sp" />

            <Spinner
                android:layout_marginLeft="20dp"
                android:id="@+id/spin_xueyuan"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:layout_gravity="center_horizontal"
                android:prompt="@string/spin_title_xueyuan"
                android:spinnerMode="dialog" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="选择专业"
                android:layout_gravity="center_vertical"
                android:textColor="#E90E0E"
                android:padding="5dip"
                android:textSize="16sp" />

            <Spinner
                android:layout_marginLeft="20dp"
                android:id="@+id/spin_zhuanye"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_gravity="center_horizontal"
                android:prompt="@string/spin_title_zhuanye"
                android:spinnerMode="dialog" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="班级选择"
                android:layout_gravity="center_vertical"
                android:textColor="#E90E0E"
                android:padding="5dip"
                android:textSize="16sp" />

            <Spinner
                android:layout_marginLeft="20dp"
                android:id="@+id/spin_banji"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_gravity="center_horizontal"
                android:prompt="@string/spin_title_banji"
                android:spinnerMode="dialog" />

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/radius_drawable_bg"
        android:orientation="vertical"
        >

        <!--添加班级的 动态显示-->
<!--        <LinearLayout-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:orientation="horizontal"-->
<!--            >-->

<!--        </LinearLayout>-->
<!--        <LinearLayout-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="150dp"-->
<!--            android:orientation="vertical"-->

<!--            >-->

<!--            <ListView-->
<!--                android:id="@+id/lv_banji_edit"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="match_parent">-->

<!--            </ListView>-->

<!--        </LinearLayout>-->
    </LinearLayout>

          <!--按钮-->
    <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_gravity="center"
    android:padding="25dp"
    >
    <TextView
        android:id="@+id/tijiao_btn_add"
        android:layout_width="225dp"
        android:layout_height="60dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="15dip"
        android:background="@drawable/text_bg"
        android:gravity="center"
        android:paddingLeft="15dip"
        android:paddingTop="2dip"
        android:paddingRight="15dip"
        android:paddingBottom="2dip"
        android:text="提交"
        android:textColor="#fff"
        android:textSize="20sp" />
</LinearLayout>
</LinearLayout>