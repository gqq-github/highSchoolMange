<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--页面的title-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="50dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="#000"
            android:text="作 业 发 布"
            >
        </TextView>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginBottom="5dip"
            android:layout_marginTop="5dip"
            android:layout_marginLeft="1dip"
            android:layout_marginRight="1dip"
            android:background="@color/view_line"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/radius_drawable_bg"
        >
        <!--设置下拉框-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="选择课程"
                    android:layout_gravity="center_vertical"
                    android:textColor="#E90E0E"
                    android:padding="5dip"
                    android:textSize="16sp" />

                <Spinner
                    android:layout_marginLeft="20dp"
                    android:id="@+id/spin_select_course"
                    android:layout_width="270dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center_horizontal"
                    android:prompt="@string/spin_title_kecheng"
                    android:spinnerMode="dialog" />

            </LinearLayout>

        </LinearLayout>
        <!--作业题目-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"

            >
            <TextView
                android:id="@+id/tv_course_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="作业题目："
                android:layout_gravity="center_vertical"
                android:textColor="#E90E0E"
                android:padding="5dip"
                android:textSize="16sp"
                >
            </TextView>
            <EditText
                android:id="@+id/et_homeworker_question"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:layout_marginLeft="10dip"
                android:background="#00000000"
                android:hint="请输入作业题目"
                android:layout_gravity="center_vertical"
                android:padding="5dip"
                android:textSize="16sp" />
        </LinearLayout>
        <!--作业分数-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"

            >
            <TextView
                android:id="@+id/tv_homeworker_credit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="作业分数："
                android:layout_gravity="center_vertical"
                android:textColor="#E90E0E"
                android:padding="5dip"
                android:textSize="16sp"
                >
            </TextView>
            <EditText
                android:id="@+id/et_homeworker_credit"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:layout_marginLeft="10dip"
                android:background="#00000000"
                android:hint="请输入作业分数"
                android:layout_gravity="center_vertical"
                android:padding="5dip"
                android:textSize="16sp" />
        </LinearLayout>
        <!--作业班级-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"

            >
            <TextView
                android:id="@+id/tv_homeworker_class"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="作业班级："
                android:layout_gravity="center_vertical"
                android:textColor="#E90E0E"
                android:padding="5dip"
                android:textSize="16sp"
                >
            </TextView>
            <EditText
                android:id="@+id/et_homeworker_class"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:layout_marginLeft="10dip"
                android:background="#00000000"
                android:hint="请输入作业班级"
                android:layout_gravity="center_vertical"
                android:padding="5dip"
                android:textSize="16sp" />
        </LinearLayout>
        <!--作业时长-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"

            >
            <TextView
                android:id="@+id/tv_homeworker_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="作业时长："
                android:layout_gravity="center_vertical"
                android:textColor="#E90E0E"
                android:padding="5dip"
                android:textSize="16sp"
                >
            </TextView>
            <EditText
                android:id="@+id/et_homeworker_time"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:layout_marginLeft="10dip"
                android:background="#00000000"
                android:hint="请输入作业时长"
                android:layout_gravity="center_vertical"
                android:padding="5dip"
                android:textSize="16sp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:padding="50dp"
        >
        <TextView
            android:id="@+id/homeworker_btn_add"
            android:layout_width="225dp"
            android:layout_height="60dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="15dip"
            android:background="@drawable/text_bg"
            android:gravity="center"
            android:paddingLeft="15dip"
            android:paddingTop="2dip"
            android:paddingRight="15dip"
            android:paddingBottom="2dip"
            android:text="作业发布"
            android:textColor="#fff"
            android:textSize="20sp" />
    </LinearLayout>
</LinearLayout>